<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= locals.name %>Courses | Student Portal</title>

  <style>
    @import url("/styles/common.css");

    .content-wrapper {
      margin: 5rem 10%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      row-gap: 2rem;
    }

    .course-view {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      row-gap: 1rem;
      column-gap: 1rem;
      padding: 1.5rem;
    }   
    
    .course-card {
      border: 1px solid black;
      border-radius: 12px;
      display: flex;
      flex-direction: column;
      row-gap: 0.3rem;
      padding: 1.5rem;
      cursor: pointer;;
    }

    .course-name {
      font-size: 1.5rem;
      font-weight: 700;
    }

    .course-section {
      font-size: 1.3rem;
      font-weight: 500;
    }

    .instructor-name {
      font-size: 1rem;
    }

    .heading {
      font-size: 2rem;
      font-weight: 700;
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="content-wrapper">
    <div class="heading">
      <%= locals.heading %>
    </div>
    <div class="course-view">
      <% for (let i = 0; i < locals.courses.length; i++) { %>
        <div class="course-card" onclick="document.location.href='<%= locals.courses[i].courseCode %>'">
          <div class="course-name"><%= locals.courses[i].courseName %></div>
          <div class="course-section"><%= locals.courses[i].section %></div>
          <div class="instructor-name"><%= locals.courses[i].instructor %></div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>