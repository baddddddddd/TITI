<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Schedule | Student Portal</title>
    <!-- <link rel="stylesheet" href="styles/schedule.css"> -->
    <!-- Hindi ko mapagana ang paglilink -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <style>
        @import url("/styles/common.css");

        .main-container {
            display: flex;
            align-items: center;
            margin: 2rem 10%;
            text-align: center;
            flex-direction: column;
        }

        table {
            width: 100%;
            overflow: hidden; /* Ensure the border radius is applied */
            margin-bottom: 30px;
            border: none;
            background: white;
        }

        .table-wrapper {
          display: flex;
          flex-direction: column;
          row-gap: 1rem;
            width: 100%;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
            background: white;
            border-radius: 12px;
            padding: 3rem;
        }

        .heading {
          color: var(--main-color);
        }

        th, td {
            border: 1px solid var(--gray-color);
            text-align: center;
            padding: 0.7rem;
            font-size: 0.9rem;
        }

        th {
            background-color: var(--main-color);
            color: white;
            text-align: center;
        }

        form {
            margin-bottom: 20px;
        }

        .extra {
            display: flex;
            flex-direction: row;
            margin-top: 30px;
        }

        button {
            display: flex;
            text-align: center;
            justify-content: center;
            align-items: center;
            margin: 10px;
            color: black;
            background: white;
            font-weight: 600;
            padding: 8px 20px;
            line-height: 24px;
            border: 3px solid #003049;
            border-radius: 5px;
            transition: ease 0.3s;
            font-size: 0.75rem;
            height: 40px;
            width: 100px;
        }

        .header {
          display: grid;
          grid-template-columns: repeat(3, 1fr);
        }

        .button {
          display: flex;
          justify-content: flex-start;
          align-items: center;
        }
    </style>
</head>

<body>
    <div class="main-container">
        <div class="table-wrapper">
          <div class="header">
            <div class="btn-borderless button" onclick="document.location.href = '/dashboard'">
              <i class='bx bx-arrow-back'></i>
              BACK
            </div>
            <h1 class="heading">Schedule</h1>
          </div>
        <table>
            <thead>
                <tr>
                    <th>Time Slot</th>
                    <th>Monday</th>
                    <th>Tuesday</th>
                    <th>Wednesday</th>
                    <th>Thursday</th>
                    <th>Friday</th>
                </tr>
            </thead>
            <tbody>
                <% schedule.forEach(item => { %>
                    <tr>
                        <td><%= item.time_slot %></td>
                        <td><%- item.Monday ? (item.Monday + (item.Instructor ? '<br>' + item.Instructor : '')) : '---' %></td>
                        <td><%- item.Tuesday ? (item.Tuesday + (item.Instructor ? '<br>' + item.Instructor : '')) : '---' %></td>
                        <td><%- item.Wednesday ? (item.Wednesday + (item.Instructor ? '<br>' + item.Instructor : '')) : '---' %></td>
                        <td><%- item.Thursday ? (item.Thursday + (item.Instructor ? '<br>' + item.Instructor : '')) : '---' %></td>
                        <td><%- item.Friday ? (item.Friday + (item.Instructor ? '<br>' + item.Instructor : '')) : '---' %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
      </div>
    </div>
</body>
</html>
