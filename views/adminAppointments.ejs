<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointments List</title>

    <style>
        @import url("./common.css");

        .flex-container {
            display: flex;
            align-items: center;
            height: 100vh;
            width: 100%;
            flex-direction: column;
            font-family: Arial, Helvetica, sans-serif;
        }

        h1 {
            margin-top: 20px;
        }

        table {
            width: 80%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .appointment-column {
            width: 17%;
            overflow-wrap: break-word;
        }

        .date-column {
            width: 12%;
            overflow-wrap: break-word;
        }

        .purpose-column {
            width: 40%;
            overflow-wrap: break-word;
        }

        .action-column {
            width: 12%;
            overflow-wrap: break-word;
        }

        .button-submit {
            display: flex;
            flex-direction: row;
        }

        .button-submit button{
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 10px;
            color: white;
            background: #003049;
            font-size: 0.9rem;
            font-weight: 600;
            padding: 8px 20px;
            line-height: 24px;
            border: 3px solid #003049;
            border-radius: 5px;
            transition: ease 0.3s;
            height: 25px;
            width: 80px;
            position: relative;
        }

        .extra {
            display: flex;
            flex-direction: row;
            margin: 10px;
        }

        .extra button {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 10px;
            color: black;
            background: white;
            font-size: 0.9rem;
            font-weight: 600;
            padding: 8px 20px;
            line-height: 24px;
            border: 3px solid #003049;
            border-radius: 5px;
            transition: ease 0.3s;
            height: 35px;
            width: 80;
            position: relative;
        }

        h1 {
            font-family: Arial, Helvetica, sans-serif;
            margin-top: 9px;
            color: #003049;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="flex-container">
        <div class="extra">
            <form action="/admin/dashboard" method="get">
                <button input="submit">Back</button>
            </form>
            <h1>Appointments List</h1>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Appointment ID</th>
                    <th>Date</th>
                    <th>Purpose</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% for (const appointment of appointmentData) { %>
                    <tr>
                        <td class="appointment-column"><%= appointment.AppointmentID %></td>
                        <!-- Format the date using toLocaleDateString -->
                        <td class="date-column"><%= new Date(appointment.Date).toLocaleDateString() %></td>
                        <td class="purpose-column"><%= appointment.Purpose %></td>
                        <td class="status-column"><%= appointment.Status %></td>
                        <td>
                            <form class="button-submit" action="/handle-appointment" method="post">
                                <input type="hidden" name="appointmentID" value="<%= appointment.AppointmentID %>">
                                <button type="submit" name="action" value="approve">Approve</button>
                                <button type="submit" name="action" value="decline">Decline</button>
                                <!-- You might want to add a third button for hiding instead of deleting -->
                            </form>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
