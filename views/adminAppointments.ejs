<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointments List</title>

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <style>
        @import url("/styles/common.css");

        .flex-container {
            display: flex;
            align-items: center;
            min-height: 80vh;
            width: 100%;
            flex-direction: column;
            border-radius: 12px;            
            padding: 2rem;
            background: white;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
        }

        h1 {
            margin-top: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 1rem
        }

        

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
          text-align: center;
          background: var(--main-color);
          color: white;
        }

        .appointment-column {
            width: 17%;
            overflow-wrap: break-word;
        }

        .date-column {
            width: 12%;
            overflow-wrap: break-word;
        }

        .purpose-column {
            width: 40%;
            overflow-wrap: break-word;
        }

        .action-column {
            width: 12%;
            overflow-wrap: break-word;
        }

        .button-submit {
            display: flex;
            flex-direction: row;
        }

        .extra {
            display: flex;
            flex-direction: row;
            margin: 10px;
        }

        .extra button {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 10px;
            color: black;
            background: white;
            font-size: 0.9rem;
            font-weight: 600;
            padding: 8px 20px;
            line-height: 24px;
            border: 3px solid #003049;
            border-radius: 5px;
            transition: ease 0.3s;
            height: 35px;
            width: 80;
            position: relative;
        }

        .header {
          display: grid;
          grid-template-columns: repeat(3, 1fr);
          width: 100%;
        }

        .heading {
          color: var(--main-color);
        }

        .content-wrapper {
          margin: 3rem 10%;
          text-align: center;
        }

        .button {
          text-align: left;
        }

        .control-view {
          width: 100%;
          display: flex;
          justify-content: flex-start;
        }

        .controls {
          padding: 0.7rem;
          background: var(--main-color);
          color: white;
          border: none;
          font-weight: 600;
          border-radius: 6px;
        }

        .button-submit {
          display: flex;
          column-gap: 0.5rem;
          justify-content: center;
          align-items: center;
        }
    </style>
</head>
<body>
    <div class="content-wrapper">
      <div class="control-view">
        <div class="btn-borderless" onclick="document.location.href = '/admin/dashboard'">
          <i class='bx bx-arrow-back'></i>
            BACK
          </div>
      </div>
      <div class="flex-container">
        <h2 class="heading">Appointment Records</h2>
          <table>
              <thead>
                  <tr>
                      <th>Appointment ID</th>
                      <th>Date</th>
                      <th>Purpose</th>
                      <th>Status</th>
                      <th>Action</th>
                  </tr>
              </thead>
              <tbody>
                  <% for (const appointment of appointmentData) { %>
                      <tr>
                          <td class="appointment-column"><%= appointment.AppointmentID %></td>
                          <!-- Format the date using toLocaleDateString -->
                          <td class="date-column"><%= new Date(appointment.Date).toLocaleDateString() %></td>
                          <td class="purpose-column"><%= appointment.Purpose %></td>
                          <td class="status-column"><%= appointment.Status %></td>
                          <td>
                              <form class="button-submit" action="/handle-appointment" method="post">
                                  <input type="hidden" name="appointmentID" value="<%= appointment.AppointmentID %>">
                                  <button class="controls" type="submit" name="action" value="approve">Approve</button>
                                  <button class="controls" type="submit" name="action" value="decline">Decline</button>
                                  <button class="controls" type="submit" name="action" value="delete">Delete</button>
                              </form>
                          </td>
                      </tr>
                  <% } %>
              </tbody>
          </table>
      </div>
    </div>
</body>
</html>
